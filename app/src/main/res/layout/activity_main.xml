<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.lovecalculator.MainActivity"
    android:background="@drawable/klm">


    <EditText
        android:id="@+id/girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Girl's Name"
        android:inputType="textPersonName"
        android:textColor="#e6820f"
        android:textColorHint="#d12156"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Boy's Name"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="149dp"
        android:textColor="#eb800f"
        android:textColorHint="#d53565"
        android:layout_below="@+id/girl"
        android:layout_alignLeft="@+id/girl"
        android:layout_alignStart="@+id/girl"
        android:layout_marginTop="49dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="showResult"
        android:text="Calculate"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="248dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Made by KLM"
        android:visibility="visible"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#2dd617"/>




</RelativeLayout>
